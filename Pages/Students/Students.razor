    }

    private async Task DeleteStudent(int id)
    {
        // Code for deleting student
    }
    private string GetParentName(int parentId)
    {
        var parent = parents.FirstOrDefault(p => p.Id == parentId);
        return parent != null ? parent.UserName : "Unknown";
    }
}
